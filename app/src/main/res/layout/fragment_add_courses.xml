<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF3FE"
    tools:context=".Controleur.DashbardTeacher.AddCoursesFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:text="Add Courses"
        android:textColor="@color/material_dynamic_neutral50"
        android:padding="10sp"
        android:background="@drawable/shape"
        android:typeface="serif"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_select_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginStart="10sp"
            android:entries="@array/choices"
            android:background="@drawable/shapespinner"/>

        <Spinner
            android:id="@+id/spinner_select_parcour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/shapespinner"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ECTS       "
                    android:typeface="serif"
                    android:layout_marginStart="10sp"/>

                <EditText
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editects"
                    android:background="@drawable/shapespinner"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher  "
                    android:typeface="serif"
                    android:layout_marginStart="10sp"/>
                <EditText
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapespinner"
                    android:id="@+id/editteacher"
                    android:layout_marginEnd="12sp"
                    android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:text="Name      "
                    android:typeface="serif"
                    android:layout_marginTop="10sp"/>

                <EditText
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapespinner"
                    android:textSize="12sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="2sp"
                    android:id="@+id/editname"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:src="@drawable/add_circle"
                android:background="@drawable/shape_button_custom"
                android:id="@+id/btnaddCourse"
                android:layout_marginStart="20sp"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>